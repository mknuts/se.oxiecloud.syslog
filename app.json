              },
              {
                "id": "5",
                "label": {
                  "en": "Notice",
                  "sv": "Notis"
                }
              },
              {
                "id": "6",
                "label": {
                  "en": "Info",
                  "sv": "Info"
                }
              },
              {
                "id": "7",
                "label": {
                  "en": "Debug",
                  "sv": "Debug"
                }
              }
            ],
            "hint": {
